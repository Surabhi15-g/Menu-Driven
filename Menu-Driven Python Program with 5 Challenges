def movie_ticket_price():
    age = int(input("Enter your age: "))
    if age < 12:
        print("Ticket price: ₹100")
    elif age <= 18:
        print("Ticket price: ₹150")
    elif age < 60:
        print("Ticket price: ₹200")
    else:
        print("Ticket price: ₹120")


def fitness_bmi_checker():
    weight = float(input("Enter your weight in kg: "))
    height = float(input("Enter your height in meters: "))
    bmi = weight / (height ** 2)

    if bmi < 18.5:
        print("Underweight")
    elif bmi < 25:
        print("Normal weight")
    elif bmi < 30:
        print("Overweight")
    else:
        print("Obese")


def traffic_signal_helper():
    signal = input("Enter traffic light color (red/yellow/green): ").lower()
    if signal == "red":
        print("Stop!")
    elif signal == "yellow":
        print("Get ready.")
    elif signal == "green":
        print("Go!")
    else:
        print("Invalid signal.")


def electricity_bill_calculator():
    units = int(input("Enter number of units consumed: "))
    if units <= 100:
        bill = units * 5
    elif units <= 200:
        bill = units * 6
    else:
        bill = units * 8
    print(f"Your electricity bill is ₹{bill}")


def atm_withdrawal_check():
    balance = float(input("Enter your account balance: ₹"))
    withdraw = float(input("Enter amount to withdraw: ₹"))

    if withdraw > balance:
        print("Insufficient funds")
    elif withdraw % 100 == 0 and withdraw <= balance:
        print("Transaction successful")
    else:
        print("Enter amount in multiples of 100")


while True:
    print("\n===== Python Challenge Menu =====")
    print("1. Movie Ticket Price")
    print("2. Fitness BMI Checker")
    print("3. Traffic Signal Helper")
    print("4. Electricity Bill Calculator")
    print("5. ATM Withdrawal Check")
    print("6. Exit")

    choice = input("Enter your choice (1-6): ")

    if choice == "1":
        movie_ticket_price()
    elif choice == "2":
        fitness_bmi_checker()
    elif choice == "3":
        traffic_signal_helper()
    elif choice == "4":
        electricity_bill_calculator()
    elif choice == "5":
        atm_withdrawal_check()
    elif choice == "6":
        print("Exiting program... Goodbye!")
        break
    else:
        print("Invalid choice! Please enter a number between 1 and 6.")
